#include <iostream>
using namespace std;

int main() {
	int t; cin>>t;
	while(t--){
	    int n,m;
	    cin>>n>>m;
	    if(n==1 && m==1) cout<<"0\n";
	    else if(m>=n){
	        int ans = 2*(n-1) + m;
	        cout<<ans<<endl;
	    }else if(n>=m){
	        int ans = 2*(m-1) + n;
	        cout<<ans<<endl;
	    }
	}
	return 0;
}
